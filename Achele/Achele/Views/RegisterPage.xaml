<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Achele.Views.RegisterPage" 
             BindingContext="{Binding Main, Source={StaticResource Locator}}" >

    <ContentPage.Content>
    <ScrollView BindingContext="{Binding Register}">
        
    <StackLayout Margin="50,15,50,15">

        <Entry Text="{Binding LastName}"  Placeholder="User name" PlaceholderColor="#ACACAC" VerticalOptions="CenterAndExpand"  BackgroundColor="#FFFFFF"  />

        <Entry Text="{Binding Email}" Placeholder="Email" PlaceholderColor="#ACACAC" VerticalOptions="CenterAndExpand"  BackgroundColor="#FFFFFF"  />

        <Entry Text="{Binding Password}" Placeholder="Password" IsPassword="True" PlaceholderColor="#ACACAC" VerticalOptions="CenterAndExpand"  BackgroundColor="#FFFFFF"  />

        <Entry Text="{Binding ConfirmPassword}" Placeholder="Verify password"  IsPassword="True" PlaceholderColor="#ACACAC" VerticalOptions="CenterAndExpand"  BackgroundColor="#FFFFFF"  />

        <Button Command="{Binding saveUserCommand}" Text="Sign up" FontSize="14" TextColor="#FFFFFF" BorderRadius="5" Margin="0,15,0,0" BackgroundColor="#66B6B6" ></Button>

    </StackLayout>
    </ScrollView>
    </ContentPage.Content>
</ContentPage>